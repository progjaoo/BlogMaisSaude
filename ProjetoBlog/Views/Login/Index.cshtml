@model LoginModel
<br />
<br />
<br />
<br />
<br />
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}
<h2 >Faça Login para ter acesso a este conteúdo, faça login</h2>
<br />
<div class="container">
  <div class="row">
    <div class="col">
        <div class="col-10 col-md-10 col-lg-10">
             <form asp-controller="Login" asp-action="Entrar" method="post">
            <div class="col-md-10">
                    <label for="login" class="form-label">Login</label>
                    <input type="text" asp-for="Login" class="form-control" id="login">
                    @Html.ValidationMessageFor(x => x.Login)
                </div>
            <div class="col-md-10">
                     <label for="senha" class="form-label">Senha</label>
                     <input type="password" asp-for="Senha" class="form-control" id="senha">
                     @Html.ValidationMessageFor(x => x.Senha)
                </div>
            <div class="col-md-10 btn-lg">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
            </form>
       </div>
    </div>
    <div class="col">
            <div class="jumbotron jumbotron-fluid border border-danger" id="jumbo">
                <div class="container">
                    <h1 class="display-4" style="color:indianred">Atenção</h1>
                    <p class="lead">
                        <h3 class="text-uppercase" style="color:indianred">o acesso a este conteúdo é restrito a administradores</h3>
                        <h5>Para mais informações: <email endereco="saudeblog489@gmail.com" conteudo="Enviar um email"></email></h5>
                    </p>
                </div>
            </div>
    </div>
  </div>
</div>

